<script>
  // For debugging, you can uncomment the next line to see the array in the console.

  document.getElementById('lookup-btn').addEventListener('click', function () {
    var inputSku = document.getElementById('sku-input').value.trim();

    // Find the first product whose SKU matches the input.
    var foundProduct = collectionProducts.find(function (item) {
      return item.sku === inputSku;
    });

    var resultContainer = document.getElementById('result');

    if (foundProduct) {
      // If a product is found, display its image and title.
      resultContainer.innerHTML =
        '<h3>' +
        foundProduct.title +
        '</h3>' +
        '<img src="' +
        foundProduct.image +
        '" alt="' +
        foundProduct.title +
        '">';
    } else {
      resultContainer.innerHTML = 'No product found with SKU: ' + inputSku;
    }
  });
</script>
