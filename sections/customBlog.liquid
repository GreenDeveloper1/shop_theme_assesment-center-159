  {% assign collection_handles = 'hydrogen,frontpage,automated-collection' | split: ',' %}

  <script>
    var collectionProducts = [];
    {% for handle in collection_handles %}
      {% assign current_collection = collections[handle] %}
      {% if current_collection %}
        {% for product in current_collection.products %}
          {% for variant in product.variants %}
            collectionProducts.push({
              title: "{{ product.title | escape }}",
              sku: "{{ variant.sku | escape }}",
              image: "{% if product.featured_image %}{{ product.featured_image | img_url: 'medium' }}{% else %}#{% endif %}"
            });
          {% endfor %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </script>

  {% comment %}
    <input type="text" id="sku-input" placeholder="Enter product SKU">
    <button id="lookup-btn">Lookup Product</button>
    <div id="result"></div>
  {% endcomment %}

